<li class="list-group-item" data-bettable-id="<%= bet.bettable.id %>" 
<% if (bet.sideId!=null) { %>
	data-side-id="<%= bet.sideId %>" 
<% } %>
<% if (bet.over!=null) { %>
	data-over=<%= bet.over %>
<% } %>
>
	<% if (!confirmation) { %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<% } %>
	<p>
	<% if (bet.sideId == bet.bettable.sideId1) { %>
		<%= bet.bettable.team1 %> <%= bet.bettable.team1Spread %>
	<% } else if (bet.sideId == bet.bettable.sideId2) { %>
		<%= bet.bettable.team2 %> <%= bet.bettable.team2Spread %>
	<% } else if (bet.over != null) { %>
		<%= (bet.over==="true" ? "Over " : "Under ") + bet.bettable.overunder %>
	<% } %>
	</p>
	<p class="gametime"><%= bet.bettable.gameTime %></p>
	<p>
	<% if (bet.over!= null || bet.sideId == bet.bettable.sideId1) { %>
		<%= bet.bettable.team1 %> @ <%= bet.bettable.team2 %>
	<% } else { %>
		<%= bet.bettable.team2 %> vs <%= bet.bettable.team1 %>
	<% } %>
	</p>
	<% if (confirmation) { %>
		<p>Amount: $<%= bet.amount %></p>
	<% } else { %>
  	<form class="form-horizontal">
    <div class="form-group">
        <label for="amount" class="control-label col-xs-6">Amount:</label>
        <div class="col-xs-5" style="float:right;">
            <input type="number" min="0" step="1" class="bet-amount form-control" id="amount" value="<%= bet.amount %>">
        </div>
    </div>
	</form>
	<% } %>
</li>