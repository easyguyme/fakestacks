<form action="/user/updatepass/<%= user.id %>" method="POST" class="form-signin">
	<h2>Update Password</h2>	
	<input type="password" class="form-control" placeholder="Password" name="password">
	<input type="password" class="form-control" placeholder="Re-type Password" name="confirmation">
	<br/>
	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Update"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>